<section id="portfolio" class="py-16 md:py-24 bg-gray-50">
  <div class="container-custom">
    <div class="text-center space-y-4 mb-12">
      <h2 class="section-title">Portfolio Klien</h2>
      <p class="section-subtitle max-w-2xl mx-auto">
        Dipercaya oleh perusahaan-perusahaan besar untuk menyediakan pakaian safety berkualitas tinggi
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {portfolio.map((item) => (
        <div class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300">
          <!-- Portfolio Image with Client Name Overlay on Hover -->
          <div class="relative aspect-[3/4] bg-gray-100 overflow-hidden">
            <img
              src={item.image}
              alt={item.productName}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <!-- Client Name Overlay on Hover from Bottom -->
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-primary-600 to-primary-500 translate-y-full group-hover:translate-y-0 transition-transform duration-300 p-4">
              <h3 class="text-white font-bold text-base text-center">{item.clientName}</h3>
            </div>
          </div>

          <!-- Portfolio Info -->
          <div class="p-5">
            <h3 class="font-bold text-gray-900 mb-1 group-hover:text-primary-600 transition-colors">
              {item.productName}
            </h3>
            <p class="text-sm text-gray-500 mb-3 line-clamp-2">{item.description}</p>
            <div class="flex items-center justify-between pt-3 border-t border-gray-100">
              <span class="text-xs text-gray-400">Klien</span>
              <img
                src={item.clientLogo}
                alt={item.clientName}
                class="h-8 w-auto object-contain"
              />
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="#" class="btn-primary">
        Lihat Semua Portfolio
