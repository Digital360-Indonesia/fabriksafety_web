---
// Portfolio/Corporate Clients Section Component
const clients = [
  { name: 'Pertamina', logo: 'P' },
  { name: 'PLN', logo: 'PL' },
  { name: 'Waskita', logo: 'W' },
  { name: 'Adhi Karya', logo: 'AK' },
  { name: 'Jasa Marga', logo: 'JM' },
  { name: 'Angkasa Pura', logo: 'AP' },
];

const testimonials = [
  {
    text: 'Kualitas wearpack Fabrik Safety sangat baik, tahan lama dan nyaman dipakai oleh tim kami di lapangan.',
    author: 'Budi Santoso',
    position: 'Safety Manager',
    company: 'PT Konstruksi Indonesia',
    avatar: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100&h=100&fit=crop'
  },
  {
    text: 'Layanan custom order sangat memuaskan, pengerjaan cepat dan hasil bordir logo rapi sekali.',
    author: 'Rina Wijaya',
    position: 'Procurement',
    company: 'PT Energy Nusantara',
    avatar: 'https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=100&h=100&fit=crop'
  },
  {
    text: 'Harga kompetitif dengan kualitas premium. Pengiriman selalu tepat waktu untuk repeat order kami.',
    author: 'Ahmad Rahman',
    position: 'Operations Manager',
    company: 'PT Mining Solutions',
    avatar: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=100&h=100&fit=crop'
  }
];
---

<section id="portfolio" class="py-16 md:py-24 bg-gray-50">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center space-y-4 mb-16">
      <h2 class="section-title">Dipercaya oleh 500+ Perusahaan</h2>
      <p class="section-subtitle max-w-2xl mx-auto">
        Kami bangga menjadi mitra terpercaya dalam menyediakan perlengkapan safety untuk berbagai industri di Indonesia
      </p>
    </div>

    <!-- Client Logos -->
    <div class="mb-16">
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        {clients.map((client) => (
          <div class="bg-white rounded-xl p-6 flex items-center justify-center shadow-sm hover:shadow-md transition-all duration-300 aspect-square">
            <div class="text-center">
              <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
                <span class="text-xl font-bold text-gray-600">{client.logo}</span>
              </div>
              <p class="text-sm font-medium text-gray-600">{client.name}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-16">
      <div class="bg-white rounded-xl p-6 text-center shadow-sm">
        <p class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">500+</p>
        <p class="text-gray-600">Perusahaan Klien</p>
      </div>
      <div class="bg-white rounded-xl p-6 text-center shadow-sm">
        <p class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">10K+</p>
        <p class="text-gray-600">Unit Terjual</p>
      </div>
      <div class="bg-white rounded-xl p-6 text-center shadow-sm">
        <p class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">50+</p>
        <p class="text-gray-600">Kota Pengiriman</p>
      </div>
      <div class="bg-white rounded-xl p-6 text-center shadow-sm">
        <p class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">4.9</p>
        <p class="text-gray-600">Rating Klien</p>
      </div>
    </div>

    <!-- Testimonials -->
    <div>
      <h3 class="text-2xl font-bold text-center text-gray-900 mb-8">Apa Kata Klien Kami</h3>
      <div class="grid md:grid-cols-3 gap-6">
        {testimonials.map((testimonial) => (
          <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-300">
            <!-- Stars -->
            <div class="flex items-center space-x-1 mb-4">
              {[...Array(5)].map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>

            <!-- Testimonial Text -->
            <p class="text-gray-600 mb-6">"{testimonial.text}"</p>

            <!-- Author -->
            <div class="flex items-center space-x-3">
              <img
                src={testimonial.avatar}
                alt={testimonial.author}
                class="w-12 h-12 rounded-full object-cover"
              />
              <div>
                <p class="font-semibold text-gray-900">{testimonial.author}</p>
                <p class="text-sm text-gray-500">{testimonial.position}</p>
                <p class="text-xs text-gray-400">{testimonial.company}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a href="#contact" class="btn-primary">
        Bergabung Menjadi Klien Kami
      </a>
    </div>
  </div>
</section>
