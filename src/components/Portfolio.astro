---

<section id="portfolio" class="py-16 md:py-24 bg-gray-50">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center space-y-4 mb-12">
      <h2 class="section-title"
        data-id="Dipercaya oleh 500+ Perusahaan"
        data-en="Trusted by 500+ Companies"
      >Dipercaya oleh 500+ Perusahaan</h2>
      <p class="section-subtitle max-w-2xl mx-auto"
        data-id="Kami bangga menjadi mitra terpercaya dalam menyediakan perlengkapan safety untuk berbagai industri di Indonesia"
        data-en="We are proud to be a trusted partner in providing safety equipment for various industries in Indonesia"
      >
        Kami bangga menjadi mitra terpercaya dalam menyediakan perlengkapan safety untuk berbagai industri di Indonesia
      </p>
    </div>

    <!-- Client Logos Slider (3 rows, 20 logos each) -->
    <div class="mb-16 space-y-6">
      <!-- Row 1 -->
      <div class="relative overflow-hidden">
        <div id="logo-slider-1" class="flex gap-8 items-center">
          {Array.from({ length: 20 }).map((_, i) => (
            <div class="flex-shrink-0">
              <img src={clientLogo} alt={`Client ${i + 1}`} class="w-24 h-12 object-contain opacity-70 hover:opacity-100 transition-opacity" />
            </div>
          ))}
        </div>
      </div>

      <!-- Row 2 -->
      <div class="relative overflow-hidden">
        <div id="logo-slider-2" class="flex gap-8 items-center">
          {Array.from({ length: 20 }).map((_, i) => (
            <div class="flex-shrink-0">
              <img src={clientLogo} alt={`Client ${i + 21}`} class="w-24 h-12 object-contain opacity-70 hover:opacity-100 transition-opacity" />
            </div>
          ))}
        </div>
      </div>

      <!-- Row 3 -->
      <div class="relative overflow-hidden">
        <div id="logo-slider-3" class="flex gap-8 items-center">
          {Array.from({ length: 20 }).map((_, i) => (
            <div class="flex-shrink-0">
              <img src={clientLogo} alt={`Client ${i + 41}`} class="w-24 h-12 object-contain opacity-70 hover:opacity-100 transition-opacity" />
            </div>
          ))}
        </div>
      </div>
    </div>

    <style>
      @keyframes slideLeft {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
      }

      #logo-slider-1,
      #logo-slider-3 {
        animation: slideLeft 30s linear infinite;
      }

      #logo-slider-2 {
        animation: slideLeft 30s linear infinite reverse;
      }
    </style>

    <script>
      function initLogoSliders() {
        const sliders = [
          document.getElementById('logo-slider-1'),
          document.getElementById('logo-slider-2'),
          document.getElementById('logo-slider-3')
        ];

        sliders.forEach(slider => {
          if (slider) {
            slider.addEventListener('mouseenter', () => {
              slider.style.animationPlayState = 'paused';
            });
            slider.addEventListener('mouseleave', () => {
              slider.style.animationPlayState = 'running';
            });
          }
        });
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initLogoSliders);
      } else {
        initLogoSliders();
      }
    </script>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-16">
      <div class="bg-white rounded-xl p-6 text-center shadow-sm">
        <p class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">500+</p>
        <p class="text-gray-600"
          data-id="Perusahaan Klien"
          data-en="Client Companies"
        >Perusahaan Klien</p>
      </div>
      <div class="bg-white rounded-xl p-6 text-center shadow-sm">
        <p class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">100K+</p>
        <p class="text-gray-600"
          data-id="Unit Terjual"
          data-en="Units Sold"
        >Unit Terjual</p>
      </div>
      <div class="bg-white rounded-xl p-6 text-center shadow-sm">
        <p class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">50+</p>
        <p class="text-gray-600"
          data-id="Kota Pengiriman"
          data-en="Delivery Cities"
        >Kota Pengiriman</p>
      </div>
      <div class="bg-white rounded-xl p-6 text-center shadow-sm">
        <p class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">4.9</p>
        <p class="text-gray-600"
          data-id="Rating Klien"
          data-en="Client Rating"
        >Rating Klien</p>
      </div>
    </div>

    <!-- Testimonials -->
    <div>
      <h3 class="text-2xl font-bold text-center text-gray-900 mb-8"
        data-id="Apa Kata Klien Kami"
        data-en="What Our Clients Say"
      >Apa Kata Klien Kami</h3>
      <div class="relative overflow-hidden">
        <div id="testimonial-slider" class="flex gap-6">
          {testimonials.map((testimonial) => (
            <div class="flex-shrink-0 w-80">
              <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-300 h-full">
                <!-- Stars -->
                <div class="flex items-center space-x-1 mb-4">
                  {[...Array(5)].map(() => (
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>

                <!-- Testimonial Text -->
                <p class="text-gray-600 mb-4 text-sm">"{testimonial.text}"</p>

                <!-- Author -->
                <div class="flex items-center gap-3">
                  <img
                    src={clientLogo}
                    alt={testimonial.company}
                    class="w-10 h-10 object-contain"
                  />
                  <div>
                    <p class="font-semibold text-gray-900 text-sm">{testimonial.author}</p>
                    <p class="text-xs text-gray-400">{testimonial.company}</p>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <style>
      @keyframes slideTestimonials {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
      }

      #testimonial-slider {
        animation: slideTestimonials 30s linear infinite;
      }

      #testimonial-slider:hover {
        animation-play-state: paused;
      }
    </style>

    <script>
      function initTestimonialSlider() {
        const slider = document.getElementById('testimonial-slider');
        if (slider) {
          slider.addEventListener('mouseenter', () => {
            slider.style.animationPlayState = 'paused';
          });
          slider.addEventListener('mouseleave', () => {
            slider.style.animationPlayState = 'running';
          });
        }
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initTestimonialSlider);
      } else {
        initTestimonialSlider();
      }
    </script>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a href="https://wa.me/62851111204599" class="btn-primary">
        <span data-id="Bergabung Menjadi Klien Kami" data-en="Join Our Clients">Bergabung Menjadi Klien Kami</span>
      </a>
    </div>
  </div>
</section>
