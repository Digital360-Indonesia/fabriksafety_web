<section id="categories" class="py-16 md:py-24 bg-white">
  <div class="container-custom">
    <div class="text-center space-y-4 mb-12">
      <h2 class="section-title">Kategori Produk</h2>
      <p class="section-subtitle max-w-2xl mx-auto">
        Temukan berbagai perlengkapan safety berkualitas tinggi untuk melindungi tim Anda di setiap situasi kerja
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
      {categories.map((category) => (
        <a
          href="#"
          class="group bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-primary-200"
        >
          <div class="aspect-square rounded-xl overflow-hidden mb-4 bg-gray-50">
            <img
              src={category.image}
              alt={category.name}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
            />
          </div>
          <div class="text-center">
            <h3 class="font-semibold text-gray-900 mb-1 group-hover:text-primary-600 transition-colors">
              {category.name}
            </h3>
            <p class="text-sm text-gray-500">{category.productCount} Produk</p>
          </div>
        </a>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="#" class="btn-secondary">
        Lihat Semua Kategori
        <svg class="inline-block w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>
