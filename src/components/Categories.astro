<section id="categories" class="py-16 md:py-24 bg-white">
  <div class="container-custom">
    <div class="text-center space-y-4 mb-12">
      <h2 class="section-title"
        data-id="CHOOSE YOUR WORKWEAR"
        data-en="CHOOSE YOUR WORKWEAR"
      >CHOOSE YOUR WORKWEAR</h2>
      <p class="section-subtitle max-w-2xl mx-auto"
        data-id="Pakaian kerja safety berkualitas untuk mendukung produktivitas dan keamanan di lapangan maupun industri."
        data-en="Quality safety workwear to support productivity and safety in the field and industry."
      >
        Pakaian kerja safety berkualitas untuk mendukung produktivitas dan keamanan di lapangan maupun industri.
      </p>
    </div>

    <!-- Mobile Slider -->
    <div class="md:hidden relative mb-8">
      <div id="categories-slider" class="flex gap-4 overflow-x-auto snap-x snap-mandatory scrollbar-hide" style="scroll-snap-type: x mandatory; -webkit-overflow-scrolling: touch;">
        {categories.map((category, index) => (
          <a
            href="#"
            class="flex-shrink-0 w-80 snap-center group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-primary-200"
          >
            <div class="aspect-square rounded-t-2xl overflow-hidden bg-gray-50">
              <img
                src={category.image}
                alt={category.name}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="p-6 text-center">
              <h3 class="font-bold text-lg text-gray-900 mb-2 group-hover:text-primary-600 transition-colors"
                data-id={category.name}
                data-en={category.nameEn}
              >
                {category.name}
              </h3>
              <p class="text-sm text-gray-500"
                data-id={category.description}
                data-en={category.descriptionEn}
              >{category.description}</p>
            </div>
          </a>
        ))}
      </div>

      <!-- Slider Indicators -->
      <div class="flex justify-center gap-2 mt-4">
        {categories.map((_, index) => (
          <button
            data-category-dot={index}
            class="w-2 h-2 rounded-full bg-gray-300 transition-all duration-300"
            style={`width: ${index === 0 ? '24px' : '8px'}`}
          />
        ))}
      </div>
    </div>

    <!-- Desktop Grid -->
    <div class="hidden md:grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {categories.map((category) => (
        <a
          href="#"
          class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-primary-200"
        >
          <div class="aspect-square rounded-t-2xl overflow-hidden bg-gray-50">
            <img
              src={category.image}
              alt={category.name}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
            />
          </div>
          <div class="p-6 text-center">
            <h3 class="font-bold text-lg text-gray-900 mb-2 group-hover:text-primary-600 transition-colors"
              data-id={category.name}
              data-en={category.nameEn}
            >
              {category.name}
            </h3>
            <p class="text-sm text-gray-500"
              data-id={category.description}
              data-en={category.descriptionEn}
            >{category.description}</p>
          </div>
        </a>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="https://wa.me/62851111204599" class="btn-primary inline-flex items-center gap-2">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
        <span data-id="Lihat Katalog Produk" data-en="View Product Catalog">Lihat Katalog Produk</span>
      </a>
    </div>
  </div>
</section>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  function initCategoriesSlider() {
    const slider = document.getElementById('categories-slider');
    const dots = document.querySelectorAll('[data-category-dot]');

    if (slider && dots.length > 0) {
      slider.addEventListener('scroll', () => {
        const scrollLeft = slider.scrollLeft;
        const cardWidth = 320 + 16; // card width + gap
        const activeIndex = Math.round(scrollLeft / cardWidth);

        dots.forEach((dot, index) => {
          if (index === activeIndex) {
            dot.style.width = '24px';
            dot.style.backgroundColor = '#0ea5e9';
          } else {
            dot.style.width = '8px';
            dot.style.backgroundColor = '#d1d5db';
          }
        });
      });

      // Click handlers for dots
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          const cardWidth = 320 + 16;
          slider.scrollTo({
            left: index * cardWidth,
            behavior: 'smooth'
          });
        });
      });
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCategoriesSlider);
  } else {
    initCategoriesSlider();
  }
</script>
